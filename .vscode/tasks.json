{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "meson",
			"mode": "build",
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"target": "src/cd-hit-est:executable",
			"label": "Meson: cd-hit-est"
		},
		{
			"type": "meson",
			"mode": "build",
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build"
			},
			"label": "Meson: Build all targets",
			"options": {
				"args": [
					"--buildtype",
					"debug",
					"-v",
					"--ninja-args", "-v"
				]
			}
		},
	],
	"problemMatchers": [
        {
            "name": "msvc",
            "owner": "cpp",
            "fileLocation": ["relative", "${workspaceFolder}"],
            "pattern": {
                "regexp": "^(.*)\\((\\d+)\\)\\s*:\\s*(error|warning)\\s*(C\\d+):\\s*(.*)$",
                "file": 1,
                "line": 2,
                "severity": 3,
                "code": 4,
                "message": 5
            }
        }
    ]
}